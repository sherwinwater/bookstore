<?xml version="1.0" encoding="UTF-8"?>
<Context path="/ebook">

    <Resource name="jdbc/ebookshop" type="javax.sql.DataSource" auth="Container" 
              driverClassName="com.mysql.jdbc.Driver" 
              url="jdbc:mysql://localhost:3306/ebookshop"
              username="sam" password="sam" 
              logAbandoned="true" 
              removeAbandoned="true" removeAbandonedTimeout="60" 
              maxActive="100" maxIdle="30" maxWait="10000" />
    
    <Realm className="org.apache.catalina.realm.DataSourceRealm" 
             debug="99" dataSourceName ="jdbc/ebookshop" localDataSource="true"
             roleNameCol="Rolename" userCredCol="Password" userNameCol="Username" 
             userRoleTable="UserRole" userTable="UserPass"/>
</Context>